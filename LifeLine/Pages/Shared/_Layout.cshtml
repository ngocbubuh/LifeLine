<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LifeLine</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LifeLine.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styleindex.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/DetailStyle.css" asp-append-version="true">
    <link rel="icon" type="image/x-icon" href="~/img/logo.jpg" asp-append-version="true">
</head>
<body>
    <header class="container-fluid header-IDSL" style="background-color: rgb(248, 248, 248);">
        <div class="row">
            <div class="col-md-1 col-4 header-logo-IDSL">
                <img src="~/img/logo.jpg" alt="Logo">
            </div>

            <div class="col-md-11 col-8 header-title-IDSL">
                <h1>Lifeline First Aid Education</h1>
            </div>
        </div>
    </header>
    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-md navbar-light sticky-top" style="background-color: rgb(255, 219, 225); box-shadow: 0 3px 5px 0 rgba(0,0,0,.2);">
        <!-- Xài thẻ <nav> hoặc xài thẻ <div role="navigation"> -->
        <!-- Navigation bar -->
        <div class="container-fluid navbar-IDSL">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <!-- navbar-brand sẽ tự style logo để vừa với navbar theo chiều dọc-->
                <img src="~/img/logo.jpg" alt="Logo" style="width:40px;" class="rounded-pill">
            </a>
            <!-- Buttons when on mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Navbar items -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item nav-item-IDSL">
                        <a class="nav-link active" asp-area="" asp-page="/Index">Trang chủ</a>
                    </li>
                    <li class="nav-item nav-item-IDSL">
                        <a class="nav-link active" asp-area="" asp-page="/Content">Nội dung</a>
                    </li>
                    <li class="nav-item nav-item-IDSL">
                        <a class="nav-link active" asp-area="" asp-page="#">Bảng tin</a>
                    </li>
                    <!-- <li class="nav-item">
                        <a class="nav-link active" href="#">Góp ý</a>
                    </li> -->
                    <li class="nav-item nav-item-IDSL">
                        <a class="nav-link active" href="https://www.facebook.com/lifeline.firstaid" target="_blank">About Lifeline</a>
                    </li>
                </ul>
            </div>
            <!-- Search box -->
            <form class="d-flex" asp-page="/Index" method="get">
                <input class="form-control me-2" type="text" name="SearchString" placeholder="Search">
                <button class="btn btn-success" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer style="background-color: rgb(255, 219, 225);">
        <div class="container">
            <div class="row">
                <div class="col-md-5 col-6">
                    <div>
                        <h3 style="font-weight: bold;">Lifeline</h3>
                        <p class="mb-30 footer-desc" style="padding-right: 30px;">Ứng dụng học tập thông minh cung cấp kỹ năng sơ cấp cứu cho học sinh THCS và THPT</p>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="">
                        <h4 style="font-weight: bold;">Services</h4>
                        <ul class="list-unstyled">
                            <li>
                                <a asp-area="" asp-page="/Index" class="text-decoration-none">Trang chủ</a>
                            </li>
                            <li>
                                <a asp-area="" asp-page="/Content" class="text-decoration-none">Nội dung</a>
                            </li>
                            <li>
                                <a href="#" class="text-decoration-none">Bảng tin</a>
                            </li>
                            <li>
                                <a asp-area="" asp-page="https://www.facebook.com/lifeline.firstaid" target="_blank" class="text-decoration-none">About Lifeline</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4 col-12">
                    <div>
                        <h4 style="font-weight: bold;">Address</h4>
                        <ul class="list-unstyled">
                            <li>
                                <p>
                                    <a href="https://www.facebook.com/lifeline.firstaid" target="_blank">Lifeline First Aid Education</a>
                                </p>
                            </li>
                            <li>
                                <p>
                                    <a asp-area="" asp-page="#">lifelinefirstaideducation@gmail.com</a>
                                </p>
                            </li>
                            <li>
                                <p>Le Quy Don High School, Distric 3, HCMC</p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- <div class="d-flex justify-content-center">
                <div class="copyright">
                    <p>Developed and maintained by <a href="#" target="_blank">Tên team để ở đây</a></p>
                </div>
            </div> -->
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>